@Library('my-shared-lib@main') _

pipeline {
    agent any

    tools {
        maven 'Maven 3.8.8'
    }

    // Remove or fill this if not used
    // environment {
    //     BUILD_ENV = 'production'
    // }

    stages {

        stage('Checkout') {
            steps {
                git url: 'https://github.com/Mamatha1206/shared-library-repo.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'mvn test'
            }
        }

        stage('Archive') {
            steps {
                echo 'Archiving JAR file...'
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }

    post {
        success {
            echo 'Build completed successfully!'
        }
        failure {
            echo 'Build failed. Check logs.'
        }
    }
}

